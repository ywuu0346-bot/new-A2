{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": {
    "text": "Australia Rainfall (past 36 months)",
    "font": "Garamond",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#333",
    "anchor": "middle"
  },
  "projection": {
    "type": "mercator",
    "center": [134, -25],
    "scale": 850
  },
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {
        "type": "geoshape",
        "fill": "#eaf6ff"
      }
    },
    {
      "data": {"graticule": {"step": [20, 20]}},
      "mark": {
        "type": "geoshape",
        "stroke": "#b0c4cf",
        "strokeWidth": 0.6,
        "opacity": 0.55
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ywuu0346-bot/3179-DV2-/refs/heads/main/map%20json/STE_2021_AUST_GDA2020.json",
        "format": {"type": "topojson", "feature": "states and boundries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f7f7f7"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ywuu0346-bot/new-A2/refs/heads/main/data/rainfall.2025-08-31.36month.aus.csv",
        "format": {
          "type": "csv",
          "parse": {
            "Latitude (°)": "number",
            "Longitude (°)": "number",
            "Rainfall (mm)": "number",
            "Percentile": "number"
          }
        }
      },
      "mark": {
        "type": "circle",
        "opacity": 0.75,
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "Longitude (°)", "type": "quantitative"},
        "latitude": {"field": "Latitude (°)", "type": "quantitative"},
        "color": {
          "field": "Rainfall (mm)",
          "type": "quantitative",
          "title": "Total rainfall (mm)",
          "scale": {
            "scheme": "blues",
            "domain": [300, 3000]
          },
          "legend": {
            "format": ",.0f",
            "labelFont": "Garamond",
            "labelFontSize": 12.5,
            "titleFont": "Garamond",
            "titleFontSize": 14,
            "titleFontWeight": "bold",
            "labelColor": "#333",
            "titleColor": "#222"
          }
        },
        "tooltip": [
          {"field": "Region", "title": "State / Territory"},
          {"field": "Rainfall (mm)", "title": "Total rainfall (mm)", "format": ",.0f"},
          {"field": "Latitude (°)", "title": "Latitude (°)", "format": ".2f"},
          {"field": "Longitude (°)", "title": "Longitude (°)", "format": ".2f"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ywuu0346-bot/3179-DV2-/refs/heads/main/map%20json/STE_2021_AUST_GDA2020.json",
        "format": {"type": "topojson", "feature": "states and boundries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#2a6481",
        "strokeWidth": 0.9,
        "opacity": 0.9
      }
    }
  ],
  "config": {
    "font": "Garamond",
    "axis": {
      "labelFont": "Garamond",
      "labelFontSize": 12,
      "titleFont": "Garamond",
      "titleFontSize": 13,
      "titleFontWeight": "bold",
      "labelColor": "#333",
      "titleColor": "#333"
    }
  }
}