        },
        "tooltip": [
          { "field": "Year", "type": "ordinal", "title": "Year" },
          { "field": "Index", "type": "nominal", "title": "Index" },
          { "field": "Index Value", "type": "quantitative", "title": "Value", "format": ".2f" }
        ]
      }
    },

