{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 380,
  "title": {
    "text": "Distribution of Station Rainfall by State (36 months)",
    "font": "Garamond",
    "fontSize": 20,
    "fontWeight": "bold",
    "anchor": "middle",
    "color": "#1e3c72"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ywuu0346-bot/new-A2/refs/heads/main/data/rainfall.2025-08-31.36month.aus.csv"
  },
  "transform": [
    { "filter": "isValid(datum['Rainfall (mm)'])" }
  ],
  "mark": {
    "type": "boxplot",
    "extent": "min-max",
    "size": 60
  },
  "encoding": {
    "x": {
      "field": "Region",
      "type": "nominal",
      "title": "State / Territory",
      "sort": "-y",
      "axis": {
        "labelFont": "Garamond",
        "labelFontSize": 14,
        "labelColor": "#333",
        "labelAngle": 0,
        "titleFont": "Garamond",
        "titleFontSize": 15,
        "titleFontWeight": "bold",
        "titleColor": "#1e3c72"
      }
    },
    "y": {
      "field": "Rainfall (mm)",
      "type": "quantitative",
      "title": "Total Rainfall (mm)",
      "scale": {
        "zero": false
      },
      "axis": {
        "format": ",.0f",
        "labelFont": "Garamond",
        "labelFontSize": 13,
        "labelColor": "#333",
        "titleFont": "Garamond",
        "titleFontSize": 15,
        "titleFontWeight": "bold",
        "titleColor": "#1e3c72"
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {
        "domain": ["NSW", "VIC", "QLD", "SA", "WA", "TAS", "NT", "ACT"],
        "range": ["#fffac0", "#1e3c72", "#567dc5", "#ba6700", "#9b59b6", "#a84343", "#f39c12", "#95a5a6"]
      },
      "legend": null
    }
  },
  "config": {
    "boxplot": {
      "median": { "color": "#1e3c72", "strokeWidth": 3 },
      "box": { "strokeWidth": 1.5 },
      "outliers": { "size": 40, "opacity": 0.6 }
    },
    "font": "Garamond",
    "axis": {
      "grid": false
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
